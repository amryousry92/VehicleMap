<html>
  <head>
    <style>
       #map {
        height: 400px;
        width: 100%;
       }
    </style>
  </head>
  <body>>
    <div id="map"></div>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyDkoG0QjmVglip5taZJXeoe-6JCourFW18"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <script>
      var d2d_location = <%= raw @d2d_location.to_json %>
      var handler = Gmaps.build('Google');
      var markers = [];
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%= raw @locations.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });

      function timeout_polling() {
        setTimeout(function()
        {
          console.log("polling");
          $.ajax({
              type: "GET",
              url: window.location.origin + window.location.pathname+"/polling",
              dataType :"json",
              success:function(msg){
                handler.removeMarkers(markers)
                markers=msg["vehicles"];
                markers = handler.addMarkers(markers);
              },
              error:function(msg)
              {
                // alert("error ",msg);
                console.log(msg);
              }
            });
          timeout_polling();
        }, 10000);
      }

      $(document).ready(function(){
        timeout_polling();
      });
    </script>
  </body>
</html>
